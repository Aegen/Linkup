<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aegis.linkup.NewGroupActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/GroupName"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button9"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Group Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="121dp"
        android:layout_height="60dp"
        android:text="add members"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="270dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/GroupName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meetings"
        android:textSize="20sp"
        android:layout_marginBottom="119dp"
        android:layout_above="@+id/button9"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon"
        android:layout_marginTop="38dp"
        android:layout_alignTop="@+id/textView10"
        android:layout_toStartOf="@+id/checkBox8"></CheckBox>

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Tues"
        android:layout_alignBaseline="@+id/checkBox1"
        android:layout_alignBottom="@+id/checkBox1"
        android:layout_toEndOf="@+id/checkBox1"></CheckBox>

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkBox4"
        android:layout_alignBottom="@+id/checkBox4"
        android:layout_toEndOf="@+id/checkBox2"
        android:text="Wed" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thurs"
        android:layout_alignBaseline="@+id/checkBox2"
        android:layout_alignBottom="@+id/checkBox2"
        android:layout_toEndOf="@+id/checkBox3" />

    <CheckBox
        android:id="@+id/checkBox7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sun"
        android:layout_below="@+id/checkBox3"
        android:layout_toEndOf="@+id/checkBox9" />

    <CheckBox
        android:id="@+id/checkBox9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox2"
        android:layout_toEndOf="@+id/checkBox8"
        android:text="Sat" />

    <CheckBox
        android:id="@+id/checkBox8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox1"
        android:layout_toStartOf="@+id/textView10"
        android:text="Fri" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Group"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/checkBox7"
        android:layout_marginBottom="21dp" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/GroupName"
        android:layout_marginBottom="11dp"
        android:layout_toStartOf="@+id/GroupName"
        android:text="Group Name"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/groupListView"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/GroupName"
        android:layout_below="@+id/button8" />

</RelativeLayout>
